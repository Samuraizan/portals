# ===========================================
# Portals Management Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# App Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Session Encryption (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here-minimum-32-characters

# ===========================================
# Zo API Configuration
# ===========================================
ZO_API_BASE_URL=https://api.io.zo.xyz
ZO_CLIENT_KEY=your-zo-client-key

# ===========================================
# PiSignage API Configuration
# ===========================================
PISIGNAGE_API_URL=https://your-account.pisignage.com/api
PISIGNAGE_USERNAME=your-pisignage-email
PISIGNAGE_PASSWORD=your-pisignage-password

# ===========================================
# Database (Supabase)
# ===========================================
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# AWS S3 (Optional - for content uploads)
# ===========================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name
